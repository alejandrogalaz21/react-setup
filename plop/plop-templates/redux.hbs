// Reducer
const INITIAL_STATE = {
  one: {},
  all: [],
  loading: false,
  error: null
}

export function {{camelCase name}}(state = INITIAL_STATE, action) {
  switch (action.type) {
    case {{constantCase name}}_CREATE_SUCCESS:
      return { ...state, error: null, loading: false, all: [...state.many, action.payload]}
    case {{constantCase name}}_GET_ALL_SUCCESS:
      return { ...state, error: null, loading: false, all: [...action.payload] }
    case {{constantCase name}}_GET_ONE_SUCCESS:
      return { ...state, error: null, loading: false, one: { ...action.payload } }
    case {{constantCase name}}_UPDATE_SUCCESS:
      return {
        ...state,
        all: [...state.many.filter(s => s.id !== action.payload.id), action.payload],
        one: {},
        loading: false,
        error: null, 
      }
    case {{constantCase name}}_EDIT_SUCCESS:
      return {...state, loading: false, error: null}  
    case {{constantCase name}}_REMOVE_SUCCESS:
      return { ...state, error: null, loading: false, all: [...state.many.filter(s => s.id !== action.payload.id)] }
    case {{constantCase name}}_CREATE_FAILURE:
    case {{constantCase name}}_GET_ALL_FAILURE:
    case {{constantCase name}}_GET_ONE_FAILURE:
    case {{constantCase name}}_UPDATE_FAILURE:
    case {{constantCase name}}_REMOVE_FAILURE:
    case {{constantCase name}}_EDIT_FAILURE:
      return {...state, loading: false, error: action.error }
    case {{constantCase name}}_CREATE_REQUEST:
    case {{constantCase name}}_GET_ALL_REQUEST:
    case {{constantCase name}}_GET_ONE_REQUEST:
    case {{constantCase name}}_UPDATE_REQUEST:
    case {{constantCase name}}_REMOVE_REQUEST:
    case {{constantCase name}}_EDIT_REQUEST:
      return {...state, loading: true, error: null }  
    default:
      return state
  }
}